.pull-right
  .form-inline
    .form-group
      h4 Search Name/Email
      = form_tag(admin_volunteers_path, :method => "get", id: "search-form") do
        = hidden_field_tag :filter, @query.filter
        = text_field_tag :search, @query.search, placeholder: "Name/Email"
        = submit_tag "Search", :name => nil
    .form-group
      h4 Search Skill
      = form_tag(admin_volunteers_path, :method => "get", id: "search-form") do
        = hidden_field_tag :search, @query.search
        = select_tag "filter", options_from_collection_for_select(Skill.all, "id", "name", @query.filter), include_blank: true
        = submit_tag "Search", :name => nil
    .form-group
      =link_to 'Clear Search', admin_volunteers_path, class: 'btn btn-default'

.container
  h1 Volunteers
  = link_to 'Add new', new_admin_volunteer_path, class: 'btn btn-primary'
  table.table.table-hover.table-striped
    thead
      tr
        th Name
        th Email
        th Profession
        th Skill(s)
        th Certification(s)
        th Other Talent(s)
        th Receive Email Notifications
        th Adhoc Volunteer?
        th Status
        th

    tbody
      - @volunteers.each do |volunteer|
        tr
          td = link_to volunteer.name, admin_volunteer_path(volunteer)
          td = volunteer.email
          td = volunteer.profession
          td = volunteer.skills.map(&:name).to_sentence
          td = volunteer.certifications.map(&:name).to_sentence
          td = volunteer.other_talents
          td = t(:"admin.volunteers.index.value_#{volunteer.email_notification}")
          td = t(:"admin.volunteers.index.value_#{volunteer.adhoc}")
          td = volunteer.deleted_at
          td = link_to 'Edit', edit_admin_volunteer_path(volunteer), class: 'btn btn-default'
